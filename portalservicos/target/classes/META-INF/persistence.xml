<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="portalPU" transaction-type="RESOURCE_LOCAL" >
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source>java:/portal-mysql</non-jta-data-source>
		
		<class>br.com.portal.model.GenericEntity</class>
		<class>br.com.portal.model.UserEntity</class>
		<class>br.com.portal.model.PerfilEntity</class>
		<class>br.com.portal.model.ClienteEntity</class>
		<class>br.com.portal.model.EmpresaEntity</class>
		<class>br.com.portal.model.SolicitacaoEntity</class>
		<class>br.com.portal.model.embeddable.Endereco</class>
		
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" /> <!-- Cria uma tabela caso a mesma nao exista no banco de dados --> 
		    <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="true" />
		   	<property name="hibernate.generate_statistics" value="true" />
			<property name="hibernate.max_fetch_depth" value="3" />
            <property name="hibernate.current_session_context_class" value="thread" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.autocommit" value="false" />
		</properties>
	</persistence-unit>

</persistence>
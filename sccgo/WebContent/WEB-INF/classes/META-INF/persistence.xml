<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="persistence-unit" transaction-type="RESOURCE_LOCAL">
		<properties>
		    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
		    <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" /> <!-- driver do banco que ira usar -->
		    <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/sccgo" /> <!-- endereÃ§o do banco de dados -->
		    <property name="hibernate.connection.username" value="root" /> <!-- usuario para acesso ao banco -->
		    <property name="hibernate.connection.password" value="" /> <!-- senha para acesso ao banco -->
			<property name="hibernate.show_sql" value="false" />   <!-- Mostra no console as mensagem que o MySql retorna -->
		    <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- Cria uma tabela caso a mesma nao exista no banco de dados --> 
		    <property name="hibernate.format_sql" value="false" />
		   	<property name="hibernate.generate_statistics" value="false" />
			<property name="hibernate.max_fetch_depth" value="3" />
		</properties>
	</persistence-unit>
</persistence>